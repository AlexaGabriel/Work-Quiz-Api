generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id        String      @id @default(uuid())
  name      String
  password  String
  maxScore Int
}
model Category {
  id   String      @id @default(uuid())
  name String
  questions Question[]
}
model Question {
  id      Int       @id @default(autoincrement())
  statement String 
  alternatives String[]
  answer String
  difficulty String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String @unique
}